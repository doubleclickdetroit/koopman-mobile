<article class="app-view view-cart">

  <section class="page-index">
    <header>
      <h1>Shopping List</h1>

      {{#if model.products.length}}

        <button {{action 'emptyProducts'}}>Empty List</button>

        <ul class="shopping-cart">
          {{#each product in model.products}}
            <li>
              {{ product.name }}

              <button {{action 'removeProduct' product}}>Remove</button>
            </li>
          {{/each}}
        </ul>

      {{else}}

        <p class="text-center">Looks like there aren&#39;t any items in your Shopping List.</p>

      {{/if}}
    </header>
  </section>

</article>
