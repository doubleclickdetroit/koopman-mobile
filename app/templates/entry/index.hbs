<h2>{{#link-to "entries"}}&lt;{{/link-to}} {{ title }}</h2>

<button {{action "handleFavoriteToggle" model}}>
  {{#if model.favorite}}Unfavorite{{else}}Favorite{{/if}}
</button>

{{favorite-reminder favorite=model.favorite
                    onSave="handleFavoriteUpdate"}}

{{{ model.content }}}

<ul class="tools">
{{#each tool in model.tools}}
  <li>{{ tool.title }}</li>
{{/each}}
</ul>
