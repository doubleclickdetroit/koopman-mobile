    {{#link-to 'entries' class="item"}}
      <i class="fa fa-calendar"></i>
      <em>Almanac</em>
    {{/link-to}}

    {{#link-to 'projects' class="item"}}
      <i class="fa fa-wrench"></i>
      <em>Projects</em>
    {{/link-to}}

    {{#if session.isAuthenticated}}
      {{#link-to 'cart' class="item"}}
        <i class="fa fa-check-square-o"></i>
        <em>Shopping List</em>
      {{/link-to}}

      {{#link-to 'reminders' class="item"}}
        <i class="fa fa-clock-o"></i>
        <em>Reminders</em>
      {{/link-to}}
    {{/if}}
  </section>

