  {{#slider-items data-snap-ignore="true" margin="2"}}
    <div class="content">
      <div class="container-fullscreen heading-style-2">
        <h4 class="heading-title">Deal One</h4>
        <em class="heading-subtitle">Lorem ipsum dolor sit amet...</em>
        <div class="overlay bg-black"></div>
      </div>
    </div>

    <div class="content">
      <div class="container-fullscreen heading-style-2">
        <h4 class="heading-title">Deal Two</h4>
        <em class="heading-subtitle">Lorem ipsum dolor sit amet...</em>
        <div class="overlay bg-black"></div>
      </div>
    </div>

    <div class="content">
      <div class="container-fullscreen heading-style-2">
