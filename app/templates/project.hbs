    {{/if}}

    <div class="{{if relatedPost 'col-xs-6' 'col-xs-12'}}">
      <div class="thumbnail">
        <div class="caption text-center">Recent Post</div>
        <img src="{{ recentPostThumb.url }}">
      </div>
    </div>
  </div>
  --}}

</section>
