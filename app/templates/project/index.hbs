<h2>{{#link-to 'projects'}}&lt;{{/link-to}} {{ title }}</h2>

<button {{action 'handleFavoriteToggle' this}}>
  {{#if favorite}}Unfavorite{{else}}Favorite{{/if}}
</button>

{{favorite-reminder favorite=favorite onSave='handleFavoriteUpdate'}}

{{{ content.content }}}

<section class="steps">
{{#each step in steps}}
  <article class="step">
    <header>
      <h1>{{ step.title }}</h1>
    </header>

    {{{ step.content }}}
  </article>
{{/each}}
</section>

<ul class="products">
{{#each product in products}}
  <li>{{ product.title }}</li>
{{/each}}
</ul>
