<section class="main-content">
  <header>
    <a href="#menu"><i class="fa fa-bars"></i></a>
    <h1>Koopman App</h1>
  </header>

  {{outlet}}
</section>


{{#nav-canvas id="menu"}}
  <ul>
    <li>{{#link-to 'index'}}Home{{/link-to}}</li>
    <li>{{#link-to 'entries'}}Almanac{{/link-to}}</li>
    <li>{{#link-to 'projects'}}Projects{{/link-to}}</li>

    {{#if session.isAuthenticated}}
      <li>{{#link-to 'favorites'}}Favorites{{/link-to}}</li>
      <li>{{#link-to 'reminders'}}Reminders{{/link-to}}</li>
    {{/if}}

    <li>{{#link-to 'settings'}}Settings{{/link-to}}</li>
    <li>
      {{#if session.isAuthenticated}}
        <a href="#" {{action 'invalidateSession'}}>Logout</a>
      {{else}}
        {{#link-to 'login'}}Login{{/link-to}}
      {{/if}}
    </li>
  </ul>
{{/nav-canvas}}
